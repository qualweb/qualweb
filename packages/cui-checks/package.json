    "dist/*"
  ],
  "exports": {
    ".": {
      "require": "./dist/__webpack/cui.bundle.js",
      "types": "./dist/index.d.ts"
    },
    "./lib/*": {
      "require": "./dist/lib/*"
    },
    "./CuiChecksModule": {
      "require": "./dist/CuiChecksModule.js",
      "types": "./dist/CuiChecksModule.d.ts"
    }
  },
  "scripts": {
    "tsc": "tsc",
    "test": "mocha --require ts-node/register  --tsconfig ./tsconfig.test.json",
    "lint": "eslint",
    "format": "prettier src/**/*.ts --write",
    "clean": "rimraf dist",
    "build": "tsc --build tsconfig.prod.json && webpack",
    "prepublishOnly": "npm run build"
  },
