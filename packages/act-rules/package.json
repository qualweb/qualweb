{
  "name": "@qualweb/act-rules",
  "version": "0.6.37",
  "description": "ACT rules module for qualweb web accessibility evaluator",
  "files": [
    "dist/*"
  ],  
  "exports": {
    ".": {
      "require": "./dist/__webpack/act.bundle.js",
      "types": "./dist/index.d.ts"
    },
    "./lib/*": {
      "require": "./dist/lib/*"
    }
  },
  "scripts": {
    "tsc": "tsc",
    "test": "mocha",
    "test:rule": "mocha test/rule.spec.ts",
    "test:url": "mocha test/url.spec.ts",
    "validate:rules": "node validate-rules.js",
    "compile:rules": "node compile-rules.js",
    "lint": "eslint .",
    "format": "prettier src/**/*.ts --write",
    "prebuild": "npm run validate:rules",
    "build": "rimraf dist && tsc --build tsconfig.prod.json && webpack",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "a11y",
    "act",
    "act-rules",
    "accessibility",
    "qualweb",
    "evaluator",
    "rule"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qualweb/act-rules.git"
  },
  "author": "Jo√£o Vicente",
  "license": "ISC",
  "devDependencies": {
    "@qualweb/core": "^0.7.43",
    "@qualweb/locale": "0.1.18",
    "@qualweb/qw-page": "0.2.21",
    "@qualweb/util": "0.5.41",
    "@tsconfig/recommended": "^1.0.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^16.11.11",
    "@types/node-fetch": "^2.6.11",
    "ajv": "^6.12.6",
    "chai": "4.5.0",
    "mocha": "^10.2.0",
    "node-fetch": "^2.6.7",
    "prettier": "^3.1.1",
    "puppeteer": "^22.12.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^4.9.1"
  }
}
