{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug an ACT rule",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "ts-node",
      ],
      "program": "scripts/run_act_rule.ts",
      "args": [
        "--url",
        "${input:url}",
        "--act-rule",
        "${input:actRule}",
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ],
  "inputs": [
    {
      "id": "url",
      "type": "promptString",
      "description": "Which URL should be processed?",
      "default": "https://ciencias.ulisboa.pt"
    },
    {
      "id": "actRule",
      "type": "promptString",
      "description": "Which ACT rule should be run?",
      "default": "QW-ACT-R",
    },
  ]
}